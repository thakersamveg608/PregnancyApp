<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_registration"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cvBloodBank"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        app:cardElevation="@dimen/margin_4"
        app:cardCornerRadius="@dimen/margin_4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivHospital"
                android:layout_width="@dimen/margin_64"
                android:layout_height="@dimen/margin_80"
                android:layout_margin="@dimen/margin_16"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/margin_16"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/margin_24"
                    android:textColor="@color/pink_high"
                    android:text="Hospitals"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2"
                    android:background="@color/pink_high"
                    android:layout_marginTop="@dimen/margin_6"
                    android:layout_marginLeft="@dimen/margin_64"
                    android:layout_marginRight="@dimen/margin_16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2"
                    android:background="@color/pink_high"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_160"
                    android:layout_marginRight="@dimen/margin_16"/>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvBloodBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginBottom="@dimen/margin_32"
        app:cardElevation="@dimen/margin_4"
        app:cardCornerRadius="@dimen/margin_4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBloodBank"
                android:layout_width="@dimen/margin_64"
                android:layout_height="@dimen/margin_80"
                android:layout_margin="@dimen/margin_16"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/margin_16"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/margin_24"
                    android:textColor="@color/pink_high"
                    android:text="Blood Banks"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2"
                    android:background="@color/pink_high"
                    android:layout_marginTop="@dimen/margin_6"
                    android:layout_marginLeft="@dimen/margin_64"
                    android:layout_marginRight="@dimen/margin_16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2"
                    android:background="@color/pink_high"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_160"
                    android:layout_marginRight="@dimen/margin_16"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvDrugStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_below="@+id/cvBloodBank"
        android:layout_centerHorizontal="true"
        app:cardElevation="@dimen/margin_4"
        app:cardCornerRadius="@dimen/margin_4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivDrugStore"
                android:layout_width="@dimen/margin_64"
                android:layout_height="@dimen/margin_80"
                android:layout_margin="@dimen/margin_16"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/margin_16"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/margin_24"
                    android:textColor="@color/pink_high"
                    android:text="Drug Store"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2"
                    android:background="@color/pink_high"
                    android:layout_marginTop="@dimen/margin_6"
                    android:layout_marginLeft="@dimen/margin_64"
                    android:layout_marginRight="@dimen/margin_16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2"
                    android:background="@color/pink_high"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_160"
                    android:layout_marginRight="@dimen/margin_16"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>